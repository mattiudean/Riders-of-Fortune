#include <iostream>
#include <windows.h>
#include <string>
#include <iomanip>

using namespace std;

// global
const int spaces = 28;
char gameBoard[spaces];

// function prototypes
void drawBoard(int);
void changePosition(int&, int);

int main()
{   // default position of the game piece
    int spacesToMove = 0;
    int position = 0;

    drawBoard(position);
    while (spacesToMove != -1 && position != 27) {

        cout << "How many spaces do you want to move or -1 to exit:" << endl;
        cin >> spacesToMove;

        if (spacesToMove > 0) {
            changePosition(position, spacesToMove);
            drawBoard(position);
        }
    }

    if (position == 27) {
        cout << endl << "Congratulations! You have reached the end!";
    }
}
 
void changePosition(int& position, int spacesToMove) {
    while (spacesToMove > 0)
    {
        if (position >= 0) {
            position = position + spacesToMove;
            spacesToMove = 0;
        }

        if (position >= 27) {
            position = 27;    // prevents the game piece from going out of bounds.
        }

    }
}

void drawBoard(int position) {

    for (int x = 0; x < spaces; x++)
    {
            if (x >= 0 && x <= 28) {
                if (position == x)
                {
                    gameBoard[x] = 'P';
                }
                else {
                    gameBoard[x] = '*';
                }
                cout << setw(2) << gameBoard[x];
            }
            else {
                cout << " ";
            }
        }
        cout << endl;
    }
